<Window x:Class="Sistema_de_Certificados.Crear_Cuenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Certificados"
        mc:Ignorable="d"
        Title="Crear_Cuenta" Height="500" Width="800" FontFamily="Bahnschrift" Foreground="Black"  FontSize="40">
    <Grid Margin="4">
        <Grid.Background>
            <ImageBrush ImageSource="/cuenta.jfif"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Crear Cuenta" Margin="0,10,0,0"></TextBlock>
            <Image Source="/usuario.png" Height="157" Width="339" Margin="0,0,0,0"></Image>
            <TextBlock Text="Cuenta" FontSize="30"></TextBlock>
            <TextBox x:Name="usuario" Height="39" FontSize="25" Background="AliceBlue"></TextBox>
            <TextBlock Text="Contraseña" FontSize="30"></TextBlock>
            <TextBox x:Name="password" Height="39" FontSize="25" Background="AliceBlue"></TextBox>
            <Button Height="39" Content="Crear Cuenta" FontSize="25" Background="AliceBlue" Margin="0,10,0,0" Width="242" Click="CrearCuenta"></Button>
        </StackPanel>
    </Grid>
</Window>
