<Window x:Class="Sistema_de_Certificados.Crear_Fondo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Certificados"
        mc:Ignorable="d"
        Title="Crear_Fondo" Height="450" Width="800" FontFamily="BankGothic Md BT" Foreground="Black" FontSize="25">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/top.jpg"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image x:Name="Imagen" Height="200" Width="400"/>
            <Button Content="Subir" Click="Subir" Background="Transparent" BorderBrush="Transparent" Margin="0,10,0,0"></Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom">
            <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right" Margin="0,0,10,0" Content="Avanzar" Click="Avanzar"></Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom">
            <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Margin="0,0,10,0" Content="Retroceder" Foreground="WhiteSmoke" Click="Retroceso"></Button>
        </StackPanel>
    </Grid>
</Window>
