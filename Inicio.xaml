<Window x:Class="Sistema_de_Certificados.Inicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Certificados"
        mc:Ignorable="d"
        Title="Inicio" Height="450" Width="800 " FontFamily="BankGothic Md BT" Foreground="Black"  FontSize="35">
    <Grid Margin="4">
        <Grid.Background>
            <ImageBrush ImageSource="/top.jpg"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Top" Height="84" >
            <StackPanel.Background>
                <ImageBrush ImageSource="/topi.jpg"/>
            </StackPanel.Background>
            <TextBlock Background="Transparent" Margin="10,10,0,0" x:Name="Usi" Width="362" HorizontalAlignment="Left" FontWeight="Bold" Height="54"/>
            <Button Click="CerrarSesion" Content="Cerrar Sesion" HorizontalAlignment="Right" Margin="0,-60,10,0" Width="362" Background="Transparent" BorderBrush="Transparent" Height="54"></Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="/añi.png" Height="180"></Image>
            <Button Click="Añadir" Content="Empezar a Diseñar" Width="435" Margin="0,10,0,0" Background="Transparent" BorderBrush="Transparent"></Button>
        </StackPanel>
    </Grid>
</Window>
