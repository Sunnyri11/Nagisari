<Window x:Class="Sistema_de_Certificados.Datos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Certificado" Height="600" Width="1000"
        FontFamily="BankGothic Md BT" Foreground="Black" FontSize="25">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Herramientas -->
            <RowDefinition Height="*"/>
            <!-- Zona de diseño -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Herramientas arriba -->
        <StackPanel x:Name="HerramientasPanel" Orientation="Horizontal" Margin="10" Grid.Row="0">
            <!-- Fuente -->
            <ComboBox x:Name="FontSelector" Width="200"
                      ItemsSource="{x:Static Fonts.SystemFontFamilies}"
                      SelectionChanged="FontSelector_SelectionChanged"/>

            <!-- Sliders separados -->
            <Slider x:Name="SelectorNombreSize" Minimum="10" Maximum="72" Value="25" Width="150"
                    ToolTip="Tamaño Nombre" ValueChanged="SelectorNombreSize_ValueChanged"/>
            <Slider x:Name="SelectorCodigoSize" Minimum="10" Maximum="72" Value="25" Width="150"
                    ToolTip="Tamaño Código" ValueChanged="SelectorCodigoSize_ValueChanged"/>
            <Slider x:Name="SelectorImagenSize" Minimum="50" Maximum="200" Value="100" Width="150"
                    ToolTip="Tamaño Imagen" ValueChanged="SelectorImagenSize_ValueChanged"/>

            <!-- Color -->
            <ComboBox x:Name="ColorSelector" Width="150" SelectionChanged="ColorSelector_SelectionChanged">
                <ComboBoxItem Content="Black"/>
                <ComboBoxItem Content="Red"/>
                <ComboBoxItem Content="Blue"/>
                <ComboBoxItem Content="Green"/>
                <ComboBoxItem Content="White"/>
            </ComboBox>
        </StackPanel>

        <!-- Zona de diseño -->
        <Grid Grid.Row="1" Margin="60" Name="CertificadoComplete">
            <Canvas x:Name="CertificadoCanvas" Background="Transparent"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <!-- Nombre -->
                <TextBlock x:Name="CertificadoLabel" Text="Nombre del Usuario"
                           Canvas.Left="100" Canvas.Top="50"
                           TextWrapping="Wrap"
                           MouseLeftButtonDown="Elemento_MouseLeftButtonDown"
                           MouseMove="Elemento_MouseMove"
                           MouseLeftButtonUp="Elemento_MouseLeftButtonUp"/>

                <!-- Código -->
                <TextBlock x:Name="CertificadoCodigo" Text="Código"
                           Canvas.Left="400" Canvas.Top="50"
                           TextWrapping="Wrap"
                           MouseLeftButtonDown="Elemento_MouseLeftButtonDown"
                           MouseMove="Elemento_MouseMove"
                           MouseLeftButtonUp="Elemento_MouseLeftButtonUp"/>

                <!-- Imagen QR -->
                <Image x:Name="ImagenQR" Stretch="Uniform"
                       Width="100" Height="100"
                       Canvas.Left="700" Canvas.Top="50"
                       MouseLeftButtonDown="Elemento_MouseLeftButtonDown"
                       MouseMove="Elemento_MouseMove"
                       MouseLeftButtonUp="Elemento_MouseLeftButtonUp"/>
            </Canvas>
        </Grid>

        <!-- Botones abajo -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="10,0,10,20">
            <Button Content="Añadir" Click="Añadir" Margin="10,0,0,0" Background="AliceBlue"/>
            <Button Background="AliceBlue" Content="Guardar" HorizontalAlignment="Right" Click="Guardar"/>
        </StackPanel>
    </Grid>
</Window>
